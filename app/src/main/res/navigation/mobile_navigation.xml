<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_invoices">

    <fragment
        android:id="@+id/navigation_invoices"
        android:name="com.example.scotia_app.ui.invoices.InvoicesFragment"
        android:label="@string/title_invoices"
        tools:layout="@layout/fragment_invoices" >
        <argument
            android:name="user"
            app:argType="com.example.scotia_app.User" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.scotia_app.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" >
        <argument
            android:name="user"
            app:argType="com.example.scotia_app.User" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.scotia_app.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="user"
            app:argType="com.example.scotia_app.User" />
    </fragment>
</navigation>